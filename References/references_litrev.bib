@article{kolipakam_bayesian_2018,
	title = {A Bayesian phylogenetic study of the Dravidian language family},
	volume = {5},
	url = {https://royalsocietypublishing.org/doi/full/10.1098/rsos.171504},
	doi = {10.1098/rsos.171504},
