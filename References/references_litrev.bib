@article{hruschka_detecting_2015,
	title = {Detecting Regular Sound Changes in Linguistics as Events of Concerted Evolution},
	volume = {25},
	issn = {0960-9822},
	url = {http://www.sciencedirect.com/science/article/pii/S0960982214013736},
	doi = {10.1016/j.cub.2014.10.064},
	abstract = {Background
